{
  "name": "@syntek-studio/ui",
  "version": "0.6.0",
  "private": false,
  "description": "A shared UI component library for React Web and React Native applications. Built with TypeScript, Tailwind CSS 4, and Nativewind 4.",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.mjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "lint:log": "eslint src --format json --output-file lint_results/eslint.json",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "check": "npm run type-check && npm run lint",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:verbose": "vitest --reporter=verbose",
    "test:log": "vitest --reporter=json --outputFile=test_results/result.json",
    "test:coverage:log": "vitest --coverage --reporter=json --outputFile=test_results/result_coverage.json",
    "test:verbose:log": "vitest --reporter=verbose 2>&1 | tee test_results/result_verbose.txt",
    "storybook:web": "storybook dev -p 6006 -c .storybook-web",
    "storybook:web:build": "storybook build -c .storybook-web -o storybook-static-web",
    "storybook:mobile": "echo \"Note: React Native Storybook runs inside your RN app. Configure .ondevice/ in your React Native project.\"",
    "storybook:mobile:build": "echo \"Note: Mobile Storybook is built within your React Native project.\"",
    "prepare": "husky"
  },
  "peerDependencies": {
    "nativewind": "^4.2.1",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-native": ">=0.83.1",
    "react-native-reanimated": ">=4.2.1",
    "react-native-safe-area-context": ">=5.6.2",
    "react-native-web": ">=0.21.2"
  },
  "peerDependenciesMeta": {
    "react-native": {
      "optional": true
    },
    "react-native-reanimated": {
      "optional": true
    },
    "react-native-safe-area-context": {
      "optional": true
    },
    "react-native-web": {
      "optional": true
    }
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@babel/preset-react": "^7.28.5",
    "@babel/preset-typescript": "^7.28.5",
    "@storybook/addon-docs": "^10.1.11",
    "@storybook/addon-links": "^10.1.11",
    "@storybook/addon-ondevice-actions": "^10.1.1",
    "@storybook/addon-ondevice-controls": "^10.1.1",
    "@storybook/react": "^10.1.11",
    "@storybook/react-native": "^10.1.1",
    "@storybook/react-webpack5": "^10.1.11",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/react-native": "^0.73.0",
    "@typescript-eslint/eslint-plugin": "^8.51.0",
    "@typescript-eslint/parser": "^8.51.0",
    "@vitest/coverage-v8": "^4.0.16",
    "autoprefixer": "^10.4.23",
    "babel-loader": "^10.0.0",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "nativewind": "^4.2.1",
    "postcss": "^8.5.6",
    "postcss-loader": "^8.2.0",
    "prettier": "^3.7.4",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-native-web": "^0.21.2",
    "storybook": "^10.1.11",
    "tailwindcss": "^4.1.18",
    "tsc-files": "^1.1.4",
    "tslib": "^2.8.1",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "repository": {
    "type": "git",
    "url": "git@github-syntek:Syntek-Studio/ui_design_template.git"
  },
  "keywords": [
    "ui",
    "components",
    "react",
    "react-native",
    "tailwind",
    "nativewind",
    "design-system"
  ],
  "author": "Sam Bailey",
  "license": "ISC",
  "type": "module",
  "lint-staged": {
    "*.{ts,tsx}": [
      "tsc-files --noEmit",
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,json,md,css}": [
      "prettier --write"
    ]
  }
}
